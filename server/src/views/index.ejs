<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>Danh sách Routes</title>
		<style>
			body {
				font-family: Arial, sans-serif;
				background: #f4f7f9;
				color: #333;
				display: flex;
				flex-direction: column;
				align-items: center;
				padding: 40px 20px;
			}

			h1 {
				color: #0077cc;
				margin-bottom: 30px;
			}

			.routes-container {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 15px;
				max-width: 800px;
				margin-top: 10px;
			}

			form {
				display: inline-block;
			}
			button {
				background-color: #0077cc;
				color: #fff;
				border: none;
				border-radius: 6px;
				padding: 12px 24px;
				font-size: 16px;
				font-weight: 500;
				cursor: pointer;
				transition: all 0.2s ease;
			}
			button:hover {
				background-color: #005fa3;
				transform: translateY(-2px);
				box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			}

			table {
				border-collapse: collapse;
				width: 90%;
				margin-top: 40px;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
				background-color: #fff;
				border-radius: 8px;
				overflow: hidden;
			}
			th,
			td {
				border: 1px solid #ddd;
				padding: 12px 16px;
				text-align: left;
			}
			th {
				background-color: #0077cc;
				color: #fff;
			}
			tr:nth-child(even) {
				background-color: #f9f9f9;
			}
		</style>
	</head>
	<body>
		<h1>Danh sách Route</h1>

		<table>
			<thead>
				<tr>
					<th>#</th>
					<th>Route</th>
				</tr>
			</thead>
			<tbody>
				<% routes.forEach((route, index) => { %>
				<tr>
					<td><%= index + 1 %></td>
					<td><%= route %></td>
				</tr>
				<% }) %>
			</tbody>
		</table>

		<div class="routes-container">
			<% routes.forEach(route => { %>
			<form action="/api/<%= route %>/html" method="get">
				<button type="submit"><%= route %></button>
			</form>
			<% }) %>
		</div>
	</body>
</html>
